<Window x:Class="TMIJunction.View.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:TMIJunction.ViewModel;assembly=TMIJunction.esapi"
        d:DataContext="{d:DesignInstance Type=viewmodel:ProgressBarViewModel}"
        mc:Ignorable="d"
        Height="150" Width="450"
        WindowStartupLocation="CenterScreen"
        Title="{Binding WindowTitle}"
        ResizeMode="CanMinimize">

    <Grid Background="#b6b5bd">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,25,0,0"
                       Width="400"
                       Height="20"
                       Text="{Binding Message}"/>

            <ProgressBar HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Margin="0,25,0,0"
                         Width="400"
                         Height="15"
                         Value="{Binding Progress}"
                         Minimum="0.0"
                         Maximum="1.0"/>
        </StackPanel>
    </Grid>
</Window>
